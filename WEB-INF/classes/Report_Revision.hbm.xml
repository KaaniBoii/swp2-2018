<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name = "tablePojos.Report_Revision" table = "report_revision">

    <meta attribute = "class-description">
      This class contains reports.
    </meta>

    <id name = "id" type = "int" column = "id">
      <generator class="native"/>
    </id>

    <property name = "report_id" column = "report_id" type = "int"/>
    <property name = "number" column = "number" type = "int"/>

    <property name = "textOperationalActivities" column = "textOperationalActivities" type = "string"/>
    <property name = "textOperationalGuidance" column = "textOperationalGuidance" type = "string"/>
    <property name = "textVocationalTeaching" column = "textVocationalTeaching" type = "string"/>

    <property name = "hoursOperationalActivities" column = "hoursOperationalActivities" type = "int"/>
    <property name = "hoursOperationalGuidance" column = "hoursOperationalGuidance" type = "int"/>
    <property name = "hoursVocationalTeaching" column = "hoursVocationalTeaching" type = "int"/>

    <property name = "comment" column = "comment" type = "string"/>

    <property name = "timeStamp" column = "timeStamp" type = "timestamp" insert="false" update="false"/>



  </class>
</hibernate-mapping>
